<div id="location-welcome">
  <h1>Travel Destinations</h1>
  <h2>
    <em>Browse from our selection or <%= link_to 'Create', new_location_path, id: 'create', class: 'ui teal inverted button' %> your own.</em>
  </h2>
</div>

<div class="ui divider hidden"></div>

<div class="ui divider hidden"></div>

<div class="ui grid">
    <div class "sixteen wide computer column">
      <div class="ui cards">
        <% @locations.each do |location| %>
          <div class="card">
            <div class="image">
              <%= check_if_image_is_present(location) %>
            </div>
            <div class="content">
              <div class="header">
                <%= link_to location.name, location_path(location.id), class: 'header' %>
              </div>
              <div class="ui divider"></div>
              <% if location.address %>
                <div class="ui center aligned">
                  <%= display_full_address(location) %>
                </div>
              <% else %>
                <%= link_to 'Add New Address', new_location_address_path(location), class: 'ui green button' %>
              <% end %>
            </div>
            <div class="extra content">
              <%= link_to 'More Info', location_path(location.id), class: 'ui orange button' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
